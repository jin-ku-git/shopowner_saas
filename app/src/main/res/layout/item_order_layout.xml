<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <LinearLayout
        android:id="@+id/refundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@drawable/radius_white_10dp"
        android:padding="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp5"
            >
            <TextView
                android:id="@+id/order_state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自提"
                android:textSize="@dimen/dp13"
                android:textColor="@color/main_black_85"
                android:background="@drawable/xian_hui_4dp"
                android:paddingTop="@dimen/size_2dp"
                android:paddingBottom="@dimen/size_2dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待审核"
                android:textColor="@color/main_black_85"
                android:textSize="@dimen/size_14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RefundImageRecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="@dimen/dp60"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥55"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/color_red"
                    />
                <TextView
                    android:id="@+id/goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共3件"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/main_black_85"
                    android:layout_marginTop="@dimen/size_3dp"
                    />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04月05号 10:00:00"
            android:textColor="@color/main_black_85"
            android:textSize="@dimen/size_14dp"
            android:layout_marginTop="@dimen/size_8dp"
            />


    </LinearLayout>


</LinearLayout>