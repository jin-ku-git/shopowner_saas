<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入退款原因"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_10dp"
            android:textColor="@color/black_222222"
            android:textSize="@dimen/size_18dp"
            android:textStyle="bold"
            />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_120dp"
                android:layout_margin="@dimen/size_8dp"
                android:background="@drawable/radius_hui">

                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="请输入退款原因"
                    android:maxLength="200"
                    android:lineSpacingExtra="4dp"
                    android:padding="@dimen/size_10dp"

                    android:textColorHint="#B4BAC7"
                    android:textSize="@dimen/size_16dp"
                    android:theme="@style/MyEditText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/30"
                        android:textColor="#B3B9C6"
                        android:textSize="@dimen/size_14dp" />

                </LinearLayout>
            </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_marginBottom="@dimen/size_10dp"
            >

            <LinearLayout
                android:id="@+id/quxiao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:text="取消"
                    android:gravity="center"
                    android:textColor="@color/black_222222"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_16dp"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp5"
                    android:background="@drawable/radius_hui_xian_45dp"/>

                <TextView
                    android:id="@+id/determine_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:text="确认"
                    android:gravity="center"
                    android:textColor="@color/main_black_85"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_16dp"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/radius_yellow_45dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
