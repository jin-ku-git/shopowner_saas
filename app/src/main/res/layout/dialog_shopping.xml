<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_white"
    android:id="@+id/layout_view"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopping_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_above="@+id/linear_view"
        android:padding="@dimen/dp5"
        />

    <LinearLayout
        android:id="@+id/linear_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/radius_white_45"
        android:layout_margin="@dimen/size_6dp"
        >
        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@mipmap/gouwu"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size_15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/blue_color"
                    />
                <TextView
                    android:id="@+id/TotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_16dp"
                    android:textColor="@color/color_red"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="种类："
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/size_12dp"
                    />
                <TextView
                    android:id="@+id/TotalType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/size_15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量："
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/size_12dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    />
                <TextView
                    android:id="@+id/TotalQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/dp15"
                    />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/Submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp45"
            android:text="提交"
            android:textColor="@color/main_white"
            android:background="@drawable/radius_blue"
            android:paddingLeft="@dimen/size_30dp"
            android:paddingRight="@dimen/size_30dp"
            android:layout_gravity="center"
            android:gravity="center"

            />
    </LinearLayout>


</RelativeLayout>
