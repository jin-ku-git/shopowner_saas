<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_5dp"
        android:background="@drawable/radius_white_10dp"
        >

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/main_black_85"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="@dimen/dp60"
            android:layout_height="wrap_content"
            android:text="单价"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/main_black_85"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/goods_number"
            android:layout_width="@dimen/dp60"
            android:layout_height="wrap_content"
            android:text="订货数量"
            android:textSize="@dimen/text_14sp"
            android:gravity="center"
            android:textColor="@color/main_black_85"
            android:layout_gravity="center"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius_white_xian_5dp"
            android:paddingLeft="@dimen/size_5dp"
            android:layout_margin="@dimen/size_5dp"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/arrival_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="实际到货数量"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/main_black_85"
                android:gravity="left|center"
                android:theme="@style/WhiteEditText"
                android:selectAllOnFocus="true"
                android:background="@null"
                android:digits="0123456789."
                android:inputType="phone|number"
                android:drawablePadding="@dimen/size_5dp"
                />
        </RelativeLayout>



    </LinearLayout>


</LinearLayout>