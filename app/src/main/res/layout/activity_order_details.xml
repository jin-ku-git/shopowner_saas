                            android:layout_height="wrap_content"
                            android:text="@{@string/rmb+viewModel.OrderDetails.reduced_amount}"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/size_14dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_0_5dp"
                        android:background="@color/color_hui"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp35"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实付金额"
                            android:textSize="@dimen/size_14dp"
                            android:textColor="@color/main_black_85"
                            android:layout_gravity="center"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@string/rmb+viewModel.OrderDetails.amount}"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/size_14dp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!-- 会员信息 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/radius_white_10dp"
                    android:layout_marginTop="@dimen/dp10"
