<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_white"
        android:orientation="vertical"
        android:padding="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.youwu.shopowner_saas.utils_view.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/loading"
                android:layout_gravity="center"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp5"
                >
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/main_black"
                    />
                <!-- 星级评分条 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp5"
                    >
                    <RatingBar
                        android:id="@+id/smallRatingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总分5.0 质量5.0 包装5.0 配送5.0"
                        android:layout_marginStart="@dimen/dp5"
                        android:textColor="@color/main_black"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023-02-03"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/main_black"
                    android:layout_marginTop="@dimen/dp5"
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价内容"
            android:textColor="@color/main_black"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ImageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情：钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱"
            android:textColor="@color/color_hui_777"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/radius_hui_8dp"
            android:padding="@dimen/dp8"
            android:id="@+id/reply_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家回复"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复内容"
                android:textColor="@color/main_black"
                android:layout_marginTop="@dimen/dp5"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textColor="@color/main_black"
            android:background="@drawable/radius_hui_xian_5dp"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:paddingRight="@dimen/dp13"
            android:paddingLeft="@dimen/dp13"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp10"
            />
    </LinearLayout>


</LinearLayout>