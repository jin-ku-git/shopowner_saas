                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_10dp"
                    android:background="@drawable/xu_xian"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/dp10"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.ZCGoodsTotalOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/shangpinzongdan"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品总单"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.ZCPreparationTimeOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/zhizuomingxi"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备料明细"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.ZCPeriodTimeOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/zhizuomingxi"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="制作明细"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.ZCDeliveryDetailsOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/peisongxiangqing"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送明细"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
            <!-- 食材 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_15dp"
                android:padding="@dimen/dp5"
                android:background="@drawable/radius_white_10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp34"
                    android:text="食材"
                    android:textColor="@color/main_black_85"
                    android:gravity="center"
                    android:textSize="@dimen/dp14"
                    />
                <View
                    android:id="@+id/view_four"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_10dp"
                    android:background="@drawable/xu_xian"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/dp10"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.SCGoodsTotalOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/shangpinzongdan"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品总单"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.SCPreparationTimeOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/zhizuomingxi"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备料明细"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.SCPeriodTimeOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/zhizuomingxi"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="制作明细"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.SCDeliveryDetailsOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/peisongxiangqing"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送明细"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
            <!-- 商品管理 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_15dp"
                android:padding="@dimen/dp5"
                android:background="@drawable/radius_white_10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp34"
                    android:text="商品管理"
                    android:textColor="@color/main_black_85"
                    android:gravity="center"
                    android:textSize="@dimen/dp14"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/xu_xian"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/dp10"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.damageGoodsOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/baosun"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="报损"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.InventoryGoodsOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/pandian"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="盘点"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.SellOffGoodsOnClick}"
