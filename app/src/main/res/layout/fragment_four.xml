                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单管理"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/main_black_85"
                        android:layout_gravity="center"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部"
                        android:textColor="@color/main_black_85"
                        android:textSize="@dimen/dp14"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp15"
                        android:src="@mipmap/black_sanjiao"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/view_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_10dp"
                    android:background="@drawable/xu_xian"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/dp10"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.OneOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/daijiedan"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待接单"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.TwoOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/daichucan"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待出餐"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.ThreeOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/daiqucan"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待取餐"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        binding:onClickCommand="@{viewModel.FourOnClick}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30"
                            android:src="@mipmap/tuikuan"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款"
                            android:textColor="@color/main_black_85"
                            android:textSize="@dimen/dp14"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp5"
