<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.youwu.shopowner_saas.ui.fragment.FourViewModel" />

        <variable
            name="viewModel"
            type="FourViewModel" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F7F7F7"
        android:padding="10dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_marginBottom="@dimen/dp20"
            >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp125"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size_18dp"
            android:background="@drawable/radius_blue_10dp"
            binding:onClickCommand="@{viewModel.SetonClick}"
            >

            <com.youwu.shopowner_saas.utils_view.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/loading"
                android:layout_marginTop="@dimen/dp15"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp12"
                android:layout_toRightOf="@+id/user_image">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名："
                        android:textColor="@color/main_white"
                        android:textSize="@dimen/size_14dp"
                        />
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.nameEvent}"
                        android:textColor="@color/main_white"
                        android:textSize="@dimen/size_14dp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号："
                    android:textColor="@color/main_white"
                    android:textSize="@dimen/size_14dp"
                    />
                <TextView
                    android:id="@+id/tvAcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.telEvent}"
                    android:textColor="@color/main_white"
                    android:textSize="@dimen/size_14dp" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职位："
                        android:textColor="@color/main_white"
                        android:textSize="@dimen/size_14dp"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店长"
                        android:textColor="@color/main_white"
                        android:textSize="@dimen/size_14dp" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp115"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/radius_white_10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp34"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp5"
                    binding:onClickCommand="@{viewModel.StoreAllonClick}"
