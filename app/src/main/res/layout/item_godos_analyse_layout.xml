<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_5dp"
        android:background="@drawable/radius_white"
        android:paddingTop="@dimen/size_15dp"
        android:paddingBottom="@dimen/size_15dp"
        >
        <TextView
            android:id="@+id/goods_top"
            android:layout_width="@dimen/dp40"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/main_black"
            android:textSize="@dimen/text_14sp"
            android:gravity="center"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/main_black"
            android:textSize="@dimen/text_14sp"
            android:gravity="center"
            android:layout_weight="2"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/goods_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="销量"
            android:textColor="@color/main_black"
            android:textSize="@dimen/text_14sp"
            android:gravity="center"
            android:layout_weight="3"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/goods_order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="销售额"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/main_black"
            android:gravity="center"
            android:layout_weight="3"
            android:textStyle="bold"

            />


    </LinearLayout>

</LinearLayout>