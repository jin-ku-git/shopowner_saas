<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90dp"
        android:orientation="horizontal"

        android:background="@drawable/radius_white_10dp"
        android:layout_margin="@dimen/dp5"
        android:padding="@dimen/dp5"
        >


        <com.youwu.shopowner_saas.utils_view.CustomRoundAngleImageView
            android:id="@+id/goods_image"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/loading"
            android:layout_gravity="center"
            roundiv:radius="8dp"
            tools:src="@mipmap/loading"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/size_5dp"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="柴火大院"
                android:textColor="#333333"
                android:textSize="@dimen/size_14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp25"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="月售"
                    android:textColor="@color/main_black_85"
                    android:textSize="@dimen/text_13sp"  />


                <TextView
                    android:id="@+id/MonthSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/main_black_5B"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存"
                    android:textSize="@dimen/dp13"
                    android:textColor="@color/main_black_5B"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp10"
                    />

                <TextView
                    android:id="@+id/stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp13"
                    android:textColor="@color/main_black_5B"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_price_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="¥"
                    android:layout_gravity="center"
                    android:textColor="#F80000"
                    android:textSize="@dimen/text_13sp"  />

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/tv_price_key"
                    android:layout_gravity="center"
                    android:text="499"
                    android:textColor="#F80000"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp14"  />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/SetUP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/main_white"
                    android:paddingBottom="@dimen/dp2"
                    android:paddingTop="@dimen/dp2"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingRight="@dimen/dp6"
                    android:background="@drawable/radius_blue_3dp"
                    android:layout_marginRight="@dimen/dp5"
                    />
                <TextView
                    android:id="@+id/PutShelves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上架"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/main_white"
                    android:paddingBottom="@dimen/dp2"
                    android:paddingTop="@dimen/dp2"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingRight="@dimen/dp6"
                    android:background="@drawable/radius_lv_3dp"

                    />
                <TextView
                    android:id="@+id/LowerShelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下架"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/main_white"
                    android:paddingBottom="@dimen/dp2"
                    android:paddingTop="@dimen/dp2"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingRight="@dimen/dp6"
                    android:background="@drawable/radius_yellow_3dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>