<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_5dp"
        >
        <com.youwu.shopowner_saas.utils_view.CustomRoundAngleImageView
            android:id="@+id/goods_image"
            android:layout_width="@dimen/size_70dp"
            android:layout_height="@dimen/size_70dp"
            android:layout_gravity="center"
            android:src="@mipmap/loading"
            android:scaleType="fitXY"
            roundiv:radius="8dp"
            tools:src="@mipmap/loading"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/size_6dp"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="柴火大院"
                android:textColor="#333333"
                android:textSize="@dimen/size_14dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp25"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="@dimen/dp10">


                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/tv_price_key"
                    android:layout_gravity="center"
                    android:text="499"
                    android:textColor="@color/main_black_85"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp14"  />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_edit_subtract"
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"
                        android:src="@mipmap/jianhao" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="50dp"
                        android:layout_height="@dimen/dp50"
                        android:gravity="center"
                        android:theme="@style/WhiteEditText"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:textColor="@color/main_black"
                        android:selectAllOnFocus="true"
                        android:textSize="@dimen/text_15sp" />

                    <ImageView
                        android:id="@+id/iv_edit_add"
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"
                        android:src="@mipmap/jiahao" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>