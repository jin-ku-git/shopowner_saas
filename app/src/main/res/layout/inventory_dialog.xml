<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_white"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp40"
          android:orientation="horizontal"
          android:background="#F6F8F9"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="盘点"
              android:textColor="@color/main_black_85"
              android:textSize="@dimen/dp14"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/size_10dp"
              />
          <View
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              />
          <ImageView
              android:id="@+id/close"
              android:layout_width="@dimen/dp25"
              android:layout_height="@dimen/dp25"
              android:src="@mipmap/black_cha"
              android:layout_gravity="center"
              android:layout_marginRight="@dimen/dp10"
              />
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_white"
            android:layout_margin="@dimen/dp15"
            android:padding="@dimen/dp10"
            >
            <TextView
                android:id="@+id/one_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="总共盘点"
                android:textSize="@dimen/dp14"
                android:textColor="@color/main_black_85"
                android:lineSpacingMultiplier="1.3"
                />
            <TextView
                android:id="@+id/two_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/dp14"
                android:textColor="@color/main_black_85"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginTop="@dimen/dp8"
                />
            <TextView
                android:id="@+id/three_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/dp14"
                android:textColor="@color/main_black_85"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginTop="@dimen/dp8"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_white"
            android:layout_marginTop="@dimen/dp15"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EEEEEE"
                />
        <LinearLayout
            android:id="@+id/quxiao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:background="#F6F8F9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="置0提交"
                android:gravity="center"
                android:textColor="@color/black_222222"
                android:layout_weight="1"
                android:textSize="@dimen/size_16dp" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#EEEEEE" />
            <TextView
                android:id="@+id/determine_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="直接提交"
                android:gravity="center"
                android:textColor="@color/color_main"
                android:layout_weight="1"
                android:textSize="@dimen/size_16dp" />
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
