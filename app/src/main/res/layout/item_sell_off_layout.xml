<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp5"
        >
        <com.youwu.shopowner_saas.utils_view.CustomRoundAngleImageView
            android:id="@+id/goods_image"
            android:layout_width="@dimen/size_70dp"
            android:layout_height="@dimen/size_70dp"
            android:layout_gravity="center"
            android:src="@mipmap/loading"
            android:scaleType="fitXY"
            roundiv:radius="8dp"
            tools:src="@mipmap/loading"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="柴火大院"
                    android:textColor="#333333"
                    android:textSize="@dimen/size_14dp" />
                <TextView
                    android:id="@+id/goods_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="柴火大院"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp5"
                    android:textSize="@dimen/size_14dp" />
            </LinearLayout>



            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/store_unchecked_img"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:src="@mipmap/unchecked_iv"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>