<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_90dp"
        android:orientation="horizontal"

        android:background="@drawable/radius_white_10dp"
        android:layout_margin="@dimen/dp5"
        android:padding="@dimen/dp5"
        >



        <com.youwu.shopowner_saas.utils_view.CustomRoundAngleImageView
            android:id="@+id/goods_image"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/loading"
            android:layout_gravity="center"
            roundiv:radius="8dp"
            tools:src="@mipmap/loading"
            android:layout_marginLeft="@dimen/dp8"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/size_5dp"
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="柴火大院"
                android:textColor="#333333"
                android:textSize="@dimen/size_14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp25"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="月售"
                    android:textColor="@color/main_black_85"
                    android:textSize="@dimen/text_13sp"  />


                <TextView
                    android:id="@+id/MonthSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/main_black_5B"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存"
                    android:textSize="@dimen/dp13"
                    android:textColor="@color/main_black_5B"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp10"
                    />

                <TextView
                    android:id="@+id/stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp13"
                    android:textColor="@color/main_black_5B"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center|left"
                android:text="￥499"
                android:textColor="#F80000"
                android:textSize="@dimen/dp14"  />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/iv_zhiding"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/zhiding" />
            <ImageView
                android:id="@+id/iv_touch"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/gengduo_black" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>